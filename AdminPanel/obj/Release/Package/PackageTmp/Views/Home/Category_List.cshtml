@model List<DatabaseAccessLayer.Category>

@{
    ViewBag.Title = "Category_List";
}

<h2>Category_List</h2>

<table class="table">
    <tr>
        <th>
           Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id },new { Href="#"}) |
            @Html.ActionLink("Details", "Details", new { id=item.Id },new { Href = "#" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id }, new { Href = "#" })
        </td>
    </tr>
}

</table>
